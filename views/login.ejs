<%- include("header.ejs")%>

    <div class="container mx-auto">
        <header>
            <div class="row mt-3">
                <div class="col-sm-3">
                    <a href="/"><img src="../imagens/logoOnMove.jpg" style="border-radius: 4px;" width="75%"></a>
                </div>
                <div class="col-sm-9 px-0 align-self-center">
                    <h1 class="titulo text-uppercase">Aperte o play e tenha o seu cinema em casa</h1>
                </div>
            </div>
            <%- include("nav.ejs")%>

        </header>
        <section>
            <h2 class="text-center">Login</h2>
            <form id="formLogin" class="w-50 mx-auto p-3 mt-4" method="post"
                style="border: 2px solid #e8673f; border-radius: 10px ;" action="">
                <fieldset>
                    <legend>Preencha os campos</legend>
                    <div class="form-group">
                        <label>E-mail:<span style="color:red ;">*</span> <br></label>
                        <input class="form-control" name="emailContato" id="emailContato" type="email">
                    </div>
                    <div class="form-group">
                        <label>Senha:<span style="color:red ;">*</span><br> </label>
                        <input class="form-control" name="senhaContato" id="senhaContato" type="password" maxlength="8">
                    </div>
                    <div class="form-group">
                        <button class="button" id="btContato" type="button">Confirmar</button>
                    </div>
                </fieldset>
            </form>
            <div class="text-center mt-4 text-uppercase">
                <a href="/cadastro">Cadastre-se agora</a>
            </div>
        </section>
<script src="../js/login.js"></script>
<%- include("footer.ejs")%>

