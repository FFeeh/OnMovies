<%- include("header.ejs")%>

    <div class="container mx-auto">
        <header>
            <div class="row mt-3">
                <div class="col-sm-3">
                    <a href="/"><img src="../imagens/logoOnMove.jpg" style="border-radius: 4px;" width="75%"></a>
                </div>
                <div class="col-sm-9 px-0 align-self-center">
                    <h1 class="titulo text-uppercase">Aperte o play e tenha o seu cinema em casa</h1>
                </div>
            </div>
            <%- include("nav.ejs")%>
        </header>
        <section class="container">
                <div id="singleDeProduto" class="mt-3 mb-3 carousel slide">
                    <h2 class="titulo mb-5"><%=filmesSingle[0].titulo%></h2>
                        <ul class="carousel-indicators">
                          <li data-target="#singleDeProduto" data-slide-to="0" class="active"></li>
                          <li data-target="#singleDeProduto" data-slide-to="1"></li>
                        </ul>
                        
                        <!-- The slideshow -->
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <div class="row">
                            <div class="col-sm-5 text-center">
                                <img src="../imagens/<%=filmesSingle[0].imagem%>" class="img-thumbnail w-50" />
                                </div>
                                <div class="col-sm-5">
                                <p ><%=filmesSingle[0].sinopse%></p>
                            </div>
                        </div>
                          </div>
                          <div class="carousel-item text-center" >
                            <iframe width="860" height="460" src="<%=filmesSingle[0].trailer%>" title="YouTube video player" frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                          </div>
                        </div>
                        
                        <!-- Left and right controls -->
                        <a class="carousel-control-prev" href="#singleDeProduto" data-slide="prev">
                          <span class="carousel-control-prev-icon"></span>
                        </a>
                        <a class="carousel-control-next" href="#singleDeProduto" data-slide="next">
                          <span class="carousel-control-next-icon"></span>
                        </a>
                      </div>
                </div>
            </div>
        </section>
        <section class="pt-5 ">
            <div class="row">
                <div class="col-sm-4">
                    <img src="../imagens/animacao.jpg" class="img-thumbnail w-70" />
                </div>
                <div class="col-sm-4 text-center">
                    <img src="../imagens/aventura.jpg" class="img-thumbnail w-70" />
                </div>
                <div class="col-sm-4 text-right">
                    <img src="../imagens/comedia2.jpg" class="img-thumbnail w-70" />
                </div>
            </div>
        </section>
        </header>
        <%- include("footer.ejs")%>
