<%- include("header.ejs")%>
<%- include("nav.ejs")%>
        </header>
        <section class="container">
                <div id="singleDeProduto" class="mt-3 mb-3 carousel slide " data-interval="0">
                    <h2 class="titulo mb-5"><%=filmesSingle[0].titulo%></h2>
                        <ul class="carousel-indicators mt-5">
                          <li data-target="#singleDeProduto" data-slide-to="0" class="active"></li>
                          <li data-target="#singleDeProduto" data-slide-to="1"></li>
                        </ul>
                        
                        <!-- The slideshow -->
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <div class="row">
                            <div class="col-sm-5 text-center mb-5">
                                <img src="../imagens/<%=filmesSingle[0].imagem%>" class="img-thumbnail w-50" />
                                </div>
                                <div class="col-sm-5">
                                <p ><%=filmesSingle[0].sinopse%></p>
                            </div>
                        </div>
                          </div>
                          <div class="carousel-item text-center mb-5" >
                            <iframe width="860" height="460" src="<%=filmesSingle[0].trailer%>" title="YouTube video player" frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                          </div>
                        </div>
                        
                        <!-- Left and right controls -->
                        <a class="carousel-control-prev" href="#singleDeProduto" data-slide="prev">
                          <span class="carousel-control-prev-icon"></span>
                        </a>
                        <a class="carousel-control-next" href="#singleDeProduto" data-slide="next">
                          <span class="carousel-control-next-icon"></span>
                        </a>
                      </div>
                </div>
            </div>
        </section>
        <%- include("imagensRodape.ejs")%>
        </header>
        <%- include("footer.ejs")%>
