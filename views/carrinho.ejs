        <script>
            $().ready(function(){
        $(".bt-excluir").click(function(){ 
            let confirmItem = confirm("Deseja excluir o filme do carrinho?")
            if (confirmItem) {
            let dataId=$(this).attr("data-id")  
            $.post("/delete-carrinho",{
                id:dataId
            }, function(data,status){
                location.href="/carrinho"
            },"json") 
        }
        })
        $("#esvaziarCarrinho").click(function(){
            let total = $(this).attr("data-total")
            if (total == 0 ){
                alert ('O carrinho já está vazio')
            }
            else {
            let confirmAll = confirm("Deseja esvaziar o carrinho?")
            if(confirmAll){
