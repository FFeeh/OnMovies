<%- include("header.ejs")%>
    <div class="container mx-auto">
        <header>
            <div class="row mt-3">
                <div class="col-sm-3">
                    <a href="/"><img src="imagens/logoOnMove.jpg" style="border-radius: 4px;" width="75%"></a>
                </div>
                <div class="col-sm-7 px-0 text-center align-self-center">
                    <h1 class="titulo text-uppercase">Aperte o play e tenha o seu cinema em casa </h1>
                    <div class="row">
                        <div class="col-sm-11 text-right ">
                            <a id="cadastrar" href="/cadastro "><img class="ml-4" src="imagens/arrow.png"
                                    width="12%"><img src="imagens/cadastre.png" class="button-cadastrar"
                                    width="20%"></a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2 text-right">
                    <span class="text-white" id="bemVindo"></span>
                    <a id="entrar" class="text-entrar" href="/login ">ENTRAR</a>
                    <a class="ml-3" style="cursor:pointer;" id="sair"><img src="imagens/logout.png" width="18%"></a>
                </div>
            </div>
            <%- include("nav.ejs")%>
        </header>
        <section class="container">

            <div id="divImagens" class="mt-4 mb-4">
                <div class="row text-center">
                <%filmes.forEach((item,n)=>{ %>
                    <%if(n < 9){%>
                                <div class="col-sm-4 mb-4">
                                <a href="/singleDeProduto?id=<%=item.filmes_id%>"> <img class="img-thumbnail w-70"
                                        src="imagens/<%=item.imagem%>"></a>


                            </div>
                            <% } %>
                            <% }) %>
                        </div>
