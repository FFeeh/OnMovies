<%- include("header.ejs")%>

    <div class="container mx-auto"> 
        <header>
            <div class="row mt-3">
                <div class="col-sm-3">
                    <a href="/"><img src="../imagens/logoOnMove.jpg" style="border-radius: 4px;" width="75%"></a>
                </div>
                <div class="col-sm-9 px-0 align-self-center">
                    <h1 class="titulo text-uppercase">Aperte o play e tenha o seu cinema em casa</h1>
                </div>
            </div>
            <%- include("nav.ejs")%>

        </header>
        <section class="container">
            <article>
                <div id="galeria" class="row">
                    <%filmes.forEach((item,n)=>{ %>
                        <%if(n < 6){%>
                            <div class="col-sm-4">
                                <div class="row">
                        <h2 class="col-sm-12 mt-4 mb-2"><%=item.titulo%></h2>
                            <div class="col-sm-7">
                                
                             
                            <a  href="/singleDeProduto?id=<%=item.filmes_id%>">
                                 <img class="img-thumbnail w-100"src="imagens/<%=item.imagem%>"></a>
                        </div>
                
                   
                    <div class="col-sm-5 mt-1 ">
                    <p><%=item.ano%></p>
                    <p><%=item.categoria%></p>
                    <p><%=item.sinopse.substring(0,80)%>...</p>
                </div>
            </div> 
        </div>
                   <% } %>
                   <% }) %>
                </div>
           

            </article>
            <%- include("footer.ejs")%>
